@model Entities.Concrete.Heading

@{
    ViewBag.Title = "AddHeading";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Yeni Başlık Ekleme Sayfası</h2>
<br />
@using (Html.BeginForm("AddHeading", "Heading", FormMethod.Post))
{
    <div class="form-group mb-4">
        @Html.Label("Başlık Adı")
        @Html.TextBoxFor(h => h.HeadingName, new { @class = "form-control" })
    </div>
    <div class="form-group mb-4">
        @Html.Label("Kategori")
        @Html.DropDownListFor(h => h.CategoryId, (List<SelectListItem>)ViewBag.vlc, new { @class = "form-control" })
    </div>
    <div class="form-group mb-4">
        @Html.Label("Yazar")
        @Html.DropDownListFor(h => h.WriterId, (List<SelectListItem>)ViewBag.vlw, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <button class="btn btn-info">Başlık Ekle</button>
    </div>
}

