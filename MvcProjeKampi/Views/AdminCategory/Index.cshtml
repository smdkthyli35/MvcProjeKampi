@using Entities.Concrete
@model List<Category>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Kategoriler</h2>
<br />

<table class="table table-bordered">
    <thead>
        <tr>
            <th>#</th>
            <th>Kategori Adı</th>
            <th>Sil</th>
            <th>Güncelle</th>
            <th>Başlıklar</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th>@item.CategoryId</th>
                <td>@item.CategoryName</td>
                <td><a href="/AdminCategory/DeleteCategory/@item.CategoryId" class="btn btn-danger">Sil</a></td>
                <td><a href="/AdminCategory/EditCategory/@item.CategoryId" class="btn btn-success">Güncelle</a></td>
                <td><a href="#" class="btn btn-primary">Başlıklar</a></td>
            </tr>
        }
    </tbody>
</table>

<br />

<a href="/AdminCategory/AddCategory" class="btn btn-info">Yeni Kategori Ekle</a>

